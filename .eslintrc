{
  "env": {
    "browser": true,
    "node": true
  },

  "globals": {},

  "plugins": [],

  "rules": {

    "no-case-declarations" : 1,
    "comma-dangle": [1, "never"],
    "no-cond-assign": 1,
    "no-console": 1,
    "no-constant-condition": 0,
    "no-control-regex": 0,
    "no-debugger": 0,
    "no-duplicate-case": 1,
    "no-empty-character-class": 0,
    "no-empty": 1,
    "no-ex-assign": 0,
    "no-extra-boolean-cast": 0,
    "no-extra-parens": 1,
    "no-extra-semi": 1,
    "no-func-assign": 1,
    "no-inner-declarations": 1,
    "no-invalid-regexp": 0,
    "no-irregular-whitespace": 0,
    "no-negated-in-lhs": 1,
    "no-obj-calls": 0,
    "no-regex-spaces": 0,
    "no-sparse-arrays": 1,
    "no-unreachable": 0,
    "use-isnan": 1,
    "accessor-pairs": 1,
    "block-scoped-var": 1,
    "complexity": 1,
    "consistent-return": 0,
    "curly": 1,
    "default-case": 0,
    "dot-notation": 1,
    "dot-location": 0,
    "eqeqeq": [1, "allow-null"],
    "guard-for-in": 0,
    "no-alert": 0,
    "no-caller": 0,
    "no-div-regex": 0,
    "no-else-return": 0,
    "no-empty-label": 0,
    "no-eq-null": 0,
    "no-eval": 1,
    "no-extra-bind": 1,
    "no-fallthrough": 1,
    "no-floating-decimal": 1,
    "no-implied-eval": 1,
    "no-iterator": 1,
    "no-loop-func": 1,
    "no-multi-spaces": 1,
    "no-new-wrappers": 1,
    "no-new": 1,
    "no-redeclare": 1,
    "no-throw-literal": 1,
    "no-warning-comments": [1, { "terms": ["todo", "fixme"], "location": "anywhere" }],
    "radix": [1, "always"],
    "vars-on-top": 1,
    "wrap-iife": [1, "inside"],
    "no-unneeded-ternary" : 1,
    "no-whitespace-before-property": 1,
    "no-implicit-coercion": [1, {
      "boolean": false,
      "number": true,
      "string": true
    }],


    "strict": [1, "global"],


    "no-catch-shadow": 1,
    "no-delete-var": 1,
    "no-unused-vars": [1, { "vars": "all", "args": "after-used" }],


    "handle-callback-err": 1,
    "no-path-concat": 1,
    "no-process-exit": 1,


    "array-bracket-spacing": 1,
    "brace-style": [1, "1tbs", { "allowSingleLine": true }],
    "camelcase": 1,
    "comma-spacing": 1,
    "comma-style": [1, "last"],
    "consistent-this": [0, "self", "that"],
    "eol-last": 0,
    "indent": [1, 2, {
      "VariableDeclarator": 2,
      "SwitchCase": 1
    }],
    "key-spacing": [1, {"beforeColon": false, "afterColon": true}],
    "max-nested-callbacks": [1, {"maximum": 4}],
    "new-cap": 1,
    "new-parens": 1,
    "newline-after-var": 1,
    "no-array-constructor": 1,
    "no-inline-comments": 0,
    "no-mixed-spaces-and-tabs": [1, "smart-tabs"],
    "no-multiple-empty-lines": [1, {"max": 2}],
    "no-new-object": 1,
    "no-spaced-func": 1,
    "no-trailing-spaces": 0,
    "no-underscore-dangle": [1, { "allowAfterThis": true }],
    "one-var": [0, "always"],
    "operator-assignment": 0,
    "operator-linebreak": 0,
    "padded-blocks": [0, "never"],
    "quote-props": [1, "consistent"],
    "quotes": [1, "single", "avoid-escape"],
    "semi-spacing": [1, {"before": false, "after": true}],
    "semi": [1, "always"],
    "keyword-spacing": 1,
    "space-before-blocks": 1,
    "space-in-parens": 1,
    "space-infix-ops": [1, {"int32Hint": false}],
    "spaced-comment": [1, "always", {
      "line": {
        "markers": ["/"],
        "exceptions": ["-", "+"]
      },
      "block": {
        "markers": ["!"],
        "exceptions": ["*"]
      }
    }],
    "wrap-regex": 1,
    "newline-per-chained-call": [1, {"ignoreChainWithDepth": 3}],


    "object-curly-spacing": [1, "always", {
      "objectsInObjects": false,
      "arraysInObjects": false
    }],

    "no-bitwise": [1, { "allow": ["~"] }],
    "max-depth": [1, 4],
    "max-len": [1, {"code": 200, "tabWidth": 1, "ignoreUrls": true}],
    "no-plusplus": 1
  }
}
